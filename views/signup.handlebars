<div class='row'>
  <div class='col s9 push-s2 m7 push-m2 l6 push-l2'>

    <div class='card'>

      <div class="card-title med-blue">
        <span>signup</span>
      </div>

      <div class='card-content'>

        <form class='signup-form'>
          <div>
            <label class='form-text' for='username-signup'>username:</label>
            <input type='text' id='username-signup' />
          </div>
          <div>
            <label class='form-text' for='password-signup'>password:</label>
            <input type='password' id='password-signup' />
          </div>
          <div class='buttons'>
            <button class="btn med-blue" type="submit" name="action">signup
              <i class="material-icons right">send</i>
            </button>
          </div>
          <p class='center'>
            or <a href='/login'>login</a>
          </p>
        </form>

      </div>
    </div>
  </div>
</div>

