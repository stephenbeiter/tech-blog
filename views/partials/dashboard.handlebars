<div class='container'>
  <div class='card'>
    <div class='card-title dark-blue new-blog'>
      <span>new blog post</span>
    </div>
    <div class='card-content'>
      <form class='new-post-form'>
        <div>
          <label class='form-text' for='post-title'>title</label>
          <input type='text' id='post-title' name='post-title' />
        </div>
        <div>
          <label class='form-text' for='post-content'>content</label>
          <textarea id='post-content' name='post-content'></textarea>
        </div>
        <div class='buttons'>
          <button type='submit' class='btn med-blue'>post <i class="material-icons right">send</i></button>
        </div>
      </form>
    </div>

  </div>

  {{#if posts.length}}
  <span class='flow-text dashboard'>Your posts</span>
  {{#each posts as |post|}}
  <div class='card'>
    {{> post-info post}}
    <div class='card-action edit-post'>
      <a href='/dashboard/edit/{{post.id}}' class='edit-link'>Edit post <span class="material-icons">
          edit
        </span></a>
    </div>
  </div>
  {{/each}}
  {{/if}}
</div>

<script src='/js/add-post.js'></script>